{
  "expo": {
    "name": "Civitas",
    "slug": "civitas",      
    "scheme": "civitas",
    "version": "1.0.0",
    "owner": "m.parrella21",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.marcoparrella.civitas",
      "infoPlist": {
        "NSCameraUsageDescription": "Civitas ha bisogno di accedere alla fotocamera per permetterti di scattare foto alle segnalazioni.",
        "NSLocationWhenInUseUsageDescription": "Civitas utilizza la tua posizione per localizzare con precisione l'intervento di manutenzione."
      }
    },
    "android": {
      "package": "com.mparrella21.civitas",
      "config": {
        "googleMaps": {
          "apiKey": "LA_TUA_GOOGLE_MAPS_API_KEY"
        }
      },
      "permissions": [
        "CAMERA",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Consenti a Civitas di utilizzare la fotocamera."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Consenti a Civitas di utilizzare la tua posizione."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "cb986715-92b1-46aa-a83a-988a81630fe5"
      }
    }
  }
}